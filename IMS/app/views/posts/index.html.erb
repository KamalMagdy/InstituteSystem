            <h5 class="card-title"><%= event.title %></h5>
            <p class="card-text"><%= event.body %></p>
            <% end %>
          </div>
        </div>
      </div>
      <div class="feed">
        <div class="card">
          <div class="card-header">
            Events
          </div>
          <div class="card-body">
            <% @events.each do |event| %>
            <h5 class="card-title"><%= event.title %></h5>
            <p class="card-text"><%= event.body %></p>
            <% end %>
            <% @events.each do |event| %>
            <h5 class="card-title"><%= event.title %></h5>
            <p class="card-text"><%= event.body %></p>
            <% end %>
            <% @events.each do |event| %>
            <h5 class="card-title"><%= event.title %></h5>
            <p class="card-text"><%= event.body %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>








