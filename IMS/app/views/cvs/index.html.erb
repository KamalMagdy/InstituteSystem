<% if student_signed_in? %>

<p id="notice"><%= notice %></p>

<h1>Cvs</h1>

<table>
  <thead>
    <tr>
      <th>Path</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cvs.each do |cv| %>
      <tr>
        <td><%= cv.path %></td>
        <td><%= cv.student_id %></td>
        <td><%= link_to 'Show', cv %></td>
        <td><%= link_to 'Edit', edit_cv_path(cv) %></td>
        <td><%= link_to 'Destroy', cv, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cv', new_cv_path %>
<% end %>